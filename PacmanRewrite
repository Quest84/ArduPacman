   for (i = 0; i < 8; i++){
      if ((i%2)==0){
         if (Ghost[i] == X */&&Y==0/*) Lose();
         } else {
         if (Ghost[i] == X*/&& Y==1/*) Lose();
        { 
   }
// Ganar
   if (X == 15) Win();
}